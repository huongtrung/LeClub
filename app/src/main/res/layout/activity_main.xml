<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <View
        android:id="@+id/toolbar_spacer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_spacer">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        android:padding="5dp"
        android:visibility="visible">

        <View
            android:id="@+id/headerIconLeft"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"/>

        <View
            android:id="@+id/headerIconRight"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/headerMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/headerIconLeft"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/header_menu"/>

        <ImageView
            android:id="@+id/headerBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/headerIconLeft"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/header_back"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/headerSearch"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/headerIconRight"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/header_search"/>

        <TextView
            android:id="@+id/headerToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/headerIconRight"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="Auj."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="aaaa"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/headerIconLeft"
            android:layout_toEndOf="@+id/headerIconLeft" />

    </RelativeLayout>
</RelativeLayout>