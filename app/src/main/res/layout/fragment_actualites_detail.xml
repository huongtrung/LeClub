<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.app.leclub.ui.fragment.ActualitesDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="230dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:id="@+id/tv_actualites_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="Descouvrez le brut"/>
                <TextView
                    android:id="@+id/tv_actualites_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    tools:text="Descouvrez le brut"
                    android:paddingBottom="20dp"
                    android:background="@drawable/bg_ll_actualites"/>
                <TextView
                    android:id="@+id/tv_actualites_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:autoLink="all"
                    android:textColorLink="@color/ocean_blue"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

                <LinearLayout
                    android:id="@+id/ll_actualites_detail_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/global"/>
                    <TextView
                        android:id="@+id/tv_actualites_detail_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColorLink="#ca2c35"
                        android:textColor="#ca2c35"
                        android:ellipsize="middle"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="wwwwwwwwwwwww"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
