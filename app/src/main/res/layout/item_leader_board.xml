<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/leaderboard_rank"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/leaderboard_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/dummy_bg"/>

    <TextView
        android:id="@+id/leaderboard_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:text="Antoine Riollet"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/leaderboard_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="60 pts"
        android:textColor="@color/avantages_link_pink"
        android:textSize="16sp"/>

</LinearLayout>