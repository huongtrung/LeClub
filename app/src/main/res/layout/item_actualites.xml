<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_actualites"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="10dp" />
    <ProgressBar
        android:id="@+id/probar_actualites"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_actualites"
        android:layout_toRightOf="@id/iv_actualites"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_title_actualites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="aaaaaaaaa" />

        <TextView
            android:id="@+id/tv_description_actualites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="aaaaaaaaa" />

        <TextView
            android:id="@+id/tv_time_actualites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Hire" />
    </LinearLayout>

</RelativeLayout>