<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_et_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/login_et_pad_l_r</item>
        <item name="android:layout_marginRight">@dimen/login_et_pad_l_r</item>
        <item name="android:background">@drawable/login_edit_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">@dimen/login_et_txt_size</item>
        <item name="android:textCursorDrawable">@drawable/login_et_cursor_bg</item>
        <item name="android:textColor">@color/login_et_txt_unfocus_bg</item>
        <item name="android:textColorHint">@color/login_et_txt_unfocus_bg</item>
    </style>

    <style name="menu_et_bg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/login_edit_bg</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tv_menu_main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/menu_item_bg</item>
    </style>

    <style name="text_header_leader_broad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="leaderboard_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_leader_board_tab</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/leaderboard_tab_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
